@if(User.Identity != null)
{
    @if(!User.Identity.IsAuthenticated)
    {
        <li class="nav-item ms-auto">
            <a class="btn btn-outline-success" asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
        </li>
        <li class="nav-item mx-2">
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewContext.HttpContext.Request.Path">Giriş Yap</a>
        </li>
    }
    else
    {
       <div class="ms-auto d-flex">
            @if (User.IsInRole("admin"))
            {
                <div class="nav-item">
                    <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Paneli</a>
                </div>
            }
            <div class="nav-item mx-2">
                <a class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Edit">Bilgileri Düzenle</a>
            </div>
            <div class="nav-item">
                <a class="btn btn-outline-danger" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
            </div>
       </div>
    }
}