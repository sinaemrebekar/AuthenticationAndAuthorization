@{
    ViewData["Title"] = "Login";
}
@model LoginVM

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Giriş Yap</h3>
            </div>
            <form asp-action="Login">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="card-body">
                    <div>
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between" style="height:50px;">
                    <a asp-action="Register">Hesabın yok mu? Kayıt Ol!</a>
                    <button type="submit" class="btn btn-outline-success">Giriş Yap!</button>
                </div>
            </form>
        </div>
    </div>
</div>
