@{
    ViewData["Title"] = "Index";
}
@model List<IdentityRole>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Rol Yönetimi</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Rol</th>
                                <th>Kullanıcılar</th>
                                <th>Role Atama</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Name</td>
                                    <td user-role="@role.Name"></td>
                                    <td>
                                        <a asp-action="AssignToRole" asp-route-roleName="@role.Name" class="btn btn-outline-primary">Role Ata</a>
                                    </td>
                                    <td>
                                        <a asp-action="UpdateRole" asp-route-roleName="@role.Name" class="btn btn-outline-success">Güncelle</a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteRole" asp-route-roleName="@role.Name" class="btn btn-outline-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="CreateRole" class="btn btn-outline-dark d-block">Yeni Rol Ekle</a>
            </div>
        </div>
    </div>
</div>
